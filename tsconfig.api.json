{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "outDir": "api",
    "rootDir": "api-src",              
    "module": "ES2020",                // <-- important fix!
    "target": "ES2020",
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["api-src/**/*.ts"]
}
