{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "outDir": "api",
    "rootDir": "api-src",
    "module": "CommonJS",
    "target": "ES2020",
    "noEmit": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": false
  },
  "include": ["api-src/**/*.ts"]
}
