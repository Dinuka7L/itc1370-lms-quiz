  "compilerOptions": {
    "outDir": "dist/api",
    "rootDir": "api",
    "module": "CommonJS",
    "target": "ES2020",
    "noEmit": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["api/**/*.ts"]
}
