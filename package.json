{
  "name": "lms-platform",
  "version": "1.0.0",
  "description": "Comprehensive Learning Management System with serverless architecture",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:frontend\"",
    "dev:api": "node server.js",
    "dev:frontend": "cd apps/lms-frontend && npm run dev",
    "build": "npm run build:frontend && npm run build:api",
    "build:frontend": "cd apps/lms-frontend && npm run build",
    "build:api": "echo 'API builds automatically on Vercel'",
    "install:all": "npm install && cd apps/lms-frontend && npm install",
    "lint": "cd apps/lms-frontend && npm run lint",
    "deploy": "vercel --prod"
  },
  "keywords": [
    "lms",
    "learning-management-system",
    "education",
    "quiz",
    "serverless",
    "vercel",
    "mongodb",
    "react"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "mongoose": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1"
    "concurrently": "^8.2.2",
    "vercel": "^32.0.0"
  },
  "engines": {
    "node": "18.x"
  }
}